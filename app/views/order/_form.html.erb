<%= form_for @order do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% f.fields_for :account do |u| %>
    <div class="form-group">
      <%= f.label :address %>
      <%= u.text_field :street, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :city %>
      <%= u.text_field :city, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :state %>
      <%= u.text_field :state, class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "Complete Order", class: "btn btn-success" %>
    </div>
  <% end %>
<% end %>
