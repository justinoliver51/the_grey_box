<%= form_for([@product, @order]) do |orders_form| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <!-- Lists all products and gives a default quantity 
       of 1 for the product selected -->
  <% @products.each do |product| %>
    <%= product.name %>
    <%= field_set_tag do %>
      <% if product.id == @product.id %>
        <%= text_field_tag "products[#{product.id}][quantity]", 1  %>
      <% else %>
        <%= text_field_tag "products[#{product.id}][quantity]", 0  %>
      <% end %>
    <% end %>
  <% end %>


  <%= orders_form.fields_for :account do |u| %>
    <div class="form-group">
      <%= orders_form.label :name %>
      <%= u.text_field :full_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= orders_form.label :email %>
      <%= u.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= orders_form.label :address %>
      <%= u.text_field :street, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= orders_form.label :city %>
      <%= u.text_field :city, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= orders_form.label :state %>
      <%= u.text_field :state, class: "form-control" %>
    </div>
    <div class="actions">
      <%= orders_form.submit "Complete Order", class: "btn btn-success" %>
    </div>
  <% end %>
<% end %>
